pkgname=mawk
pkgver=1.3.4.20141206
pkgrel=1
pkgdesc="An interpreter for the AWK Programming Language"
arch=('i686' 'amd64')
#section=unknown
#priority=extra
depends=()
branch=unstable
url="http://invisible-island.net/mawk/"
source=("$pkgname-$pkgver.tar.gz::http://invisible-island.net/datafiles/release/$pkgname.tar.gz")
md5sums=('08680b169544f225b60c47fc19da82d4')

build() {
  cd $srcdir/$pkgname-${pkgver/.2/-2}
  sed -ie 's|log()|log(1.0)|g' configure
  sed -ie "s|trap  *0|trap 'exit 0' 0|g" test/*
  ./configure
  make -j2
}

package () {
  cd $srcdir/$pkgname-${pkgver/.2/-2}
  install -d $pkgdir/usr/local/bin
  install -d $pkgdir/usr/local/share/man/man1
  make BINDIR=$pkgdir/usr/local/bin \
    MANDIR=$pkgdir/usr/local/share/man/man1 install
}
